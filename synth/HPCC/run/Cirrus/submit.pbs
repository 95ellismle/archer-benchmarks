#!/bin/bash --login
#
#PBS -N HPCC
#PBS -l select=64:ncpus=72
#PBS -l walltime=12:0:0
#PBS -A z04

cd $PBS_O_WORKDIR

module load intel-mpi-17
# module load mpt
module load gcc/6.3.0
module load intel-cmkl-17
module list

nodes=64
cores=$(( nodes * 36 ))
mpilaunch=mpirun
# mpilaunch=mpiexec_mpt
rm hpccoutf.txt
$mpilaunch -n $cores -ppn 36 ./hpcc
mv hpccoutf.txt nodes${nodes}ppn36_hpccoutf.txt
$mpilaunch -n $nodes -ppn 1 ./hpcc
mv hpccoutf.txt nodes${nodes}ppn1_hpccoutf.txt

